{
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "semi": [2, "never"],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off"
    },
    "globals": {
        "React": "writable"
    }
}